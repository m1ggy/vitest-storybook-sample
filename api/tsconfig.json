{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./build/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": false
    },
    "include": ["main.ts", "src/**/*", "test/**/*", "db/**/*"]
}
